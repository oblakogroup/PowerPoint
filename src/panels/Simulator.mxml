						</s:HGroup>
						<!--presentation heading at the top-->
						<s:HGroup horizontalCenter="0" paddingTop="3" gap="5">
							<s:BitmapImage source="@Embed('assets/icons/tb/presentationIcon.png')"/>
							<s:Group height="100%">
