									</s:VGroup>
									
									<s:Group height="100%"><s:BitmapImage source="@Embed('assets/icons/rb/spacer.png')" verticalCenter="2"/></s:Group>
									
									<s:VGroup gap="3" width="163" paddingTop="3">
