<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata> 
	
	<fx:Script fb:purpose="styling">
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
	</fx:Script>
	
	<s:states>
		<s:State name="up" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="disabled" />
	</s:states>
	
	<s:HGroup gap="0" left="0" right="0" top="4">
		<s:BitmapImage source="@Embed('assets/skinParts/nsSliderTrack-left.png')"/>
		<s:BitmapImage source="@Embed('assets/skinParts/nsSliderTrack-middle.png')" scaleMode="stretch" width="100%"/>
		<s:BitmapImage source="@Embed('assets/skinParts/nsSliderTrack-right.png')"/>
	</s:HGroup>
	
	
</s:SparkSkin>
